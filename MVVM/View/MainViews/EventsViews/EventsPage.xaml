<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YouDo.MVVM.View.MainViews.EventsPage"
             xmlns:res="clr-namespace:YouDo.Resources.Localization"
             xmlns:viewmodel="clr-namespace:YouDo.MVVM.ViewModel.MainViewModels"
             xmlns:views="clr-namespace:YouDo.MVVM.View.MainViews"
             x:DataType="viewmodel:EventsViewModel"
             Title=""
             Shell.NavBarIsVisible="False"
             Background="{StaticResource BackgroundLight}">

    <Grid RowDefinitions="50, Auto, *, 50">

        <views:TopNavigationBar Grid.Row="0"/>

        <CollectionView ItemsSource="{Binding EventContents}"
                        ItemTemplate="{StaticResource EventContentView}"
                        Grid.Row="2"
                        Background="LightGray"
                        VerticalOptions="End"
                        VerticalScrollBarVisibility="Always"/>

        <views:BottomNavigationBar Grid.Row="3"/>

    </Grid>

</ContentPage>